test tclconnio-3.1 {thread detach, raw} -constraints Thread -setup {
    ns_register_proc GET /tclconnio {

        package require Thread

        set tid [thread::create]
        set chan [ns_conn channel]
        thread::transfer $tid $chan

        thread::send $tid "
            puts -nonewline $chan x
            flush $chan
            puts -nonewline $chan x
            flush $chan
            puts -nonewline $chan x
            flush $chan
        "

        thread::release $tid
    }
} -body {
    nstest::http -getbody 1 -getheaders {Content-Length Connection} \
        GET /tclconnio
} -cleanup {
    ns_unregister_proc GET /tclconnio
} -result {{} {} xxx}



cleanupTests
