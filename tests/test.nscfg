ns_section ns/interps/CGIinterps {
    set tclsh ""
    foreach path {/usr/local/ns/bin /usr/local/bin /opt/local/bin /usr/bin} {
        foreach version {tclsh8.6 tclsh8.7 tclsh9 tclsh} {
            if {[file executable $path/$version]} {
                set tclsh $path/$version
                break
            }
        }
        if {$tclsh ne ""} break
    }
    ns_log notice "Use tclsh for CGI tests <$tclsh>"
    ns_param .cgi                $tclsh
    ns_param .tclcgi             $tclsh
    ns_param .sh                 "/bin/bash"
}

