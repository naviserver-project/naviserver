package require tcltest 2.2
namespace import -force ::tcltest::*


# "-constraints {notDarwin}" in the followng two tests does not seem
# necessary in newest Mac OS X installations.  On Max OS X 10.8
# (Darwin 12.*), everything seems fine, on 10.7 (Darwin 11.*), the
# first test does not hold.

set ::notRecentDarwin 0
if {$::tcl_platform(os) eq "Darwin"} {
    if {[lindex [split $::tcl_platform(os) .] 0] < 12} {
	set ::notRecentDarwin 1
    }
} 

tcltest::testConstraint notDarwin $::notRecentDarwin

test ns_hostbyaddr-1.1 {good address} -constraints {notDarwin} -body {
    ns_hostbyaddr 127.0.0.1
} -match glob -result localhost*

test ns_hostbyaddr-1.2 {bad address} -body {
    ns_hostbyaddr 0.0.0.0
} -returnCodes error -result {could not lookup 0.0.0.0}


cleanupTests
