#
# ns_configure_variables regression tests
#
test ns_configure_variables-1.0 {syntax: ns_configure_variables} -body {
    ns_configure_variables
} -returnCodes error -match glob -result {wrong # args: should be "?-configRoot /configRoot/? ?-silent /silent/? ?--? /prefix/ /defaultConfig/"}
# "ns_configure_variables" message should be {wrong # args: should be "ns_configure_variables ?-configRoot /directory/? ?-silent /boolean/? ?--? /prefix/ /defaultConfig/"}

#
# Helper: run ns_configure_variables in a clean scope and return a dict
# of selected variables.
#
proc _nscv_run {prefix defaultConfig presets {configRoot ""}} {
    dict for {k v} $presets { set $k $v }
    ns_configure_variables -configRoot $configRoot -silent true $prefix $defaultConfig
    set out [dict create]
    foreach v {home logdir extra_var} {
        if {[info exists $v]} { dict set out $v [set $v] }
    }
    return $out
}

test ns_configure_variables-2.0 {defaults + subst are applied} -body {
    _nscv_run "oacs_" {home "/h" logdir {$home/logs} setupfile ""} {}
} -result [dict create home "/h" logdir "/h/logs"]

test ns_configure_variables-2.1 {environment overrides defaults} -body {
    set ::env(oacs_home) "/envhome"
    _nscv_run "oacs_" {home "/h" logdir {$home/logs} setupfile ""} {}
} -cleanup {
    unset -nocomplain ::env(oacs_home)
} -result [dict create home "/envhome" logdir "/envhome/logs"]

test ns_configure_variables-2.2 {config-file preset overrides environment} -body {
    set ::env(oacs_home) "/envhome"
    _nscv_run "oacs_" {home "/h" setupfile ""} [dict create home "/cfg"]
} -cleanup {
    unset -nocomplain ::env(oacs_home)
} -result [dict create home "/cfg"]

