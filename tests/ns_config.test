} -result [dict create home "/envhome" logdir "/envhome/logs"]


test ns_configure_variables-3.0 {setupfile resolved relative to explicit configRoot} -body {
    set tmpdir [file normalize [file join [pwd] .tmp-ns-configure-variables]]
    file mkdir $tmpdir
    set setup [file join $tmpdir setup.tcl]
    set f [open $setup w]
    puts $f { set home "/setup" ; set extra_var "from_setup" }
    close $f

    _nscv_run "oacs_" {home "/h" setupfile "setup.tcl"} [dict create] $tmpdir
} -cleanup {
    catch {file delete -force [file normalize [file join [pwd] .tmp-ns-configure-variables]]}
} -returnCodes {error ok} -result [dict create home "/setup" extra_var "from_setup"]


